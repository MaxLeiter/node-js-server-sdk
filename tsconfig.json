{
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/",
    "typings/",
    "src/__tests__/*",
    "src/utils/__tests__/*",
    "dist/",
    "dist/**/*",
    "dist/src/**/*",
    "build/",
    "tsconfig.json"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2020.Promise"]
  }
}
